<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

    <ImageView android:id="@+id/imageview" android:layout_width="100dp"
               android:layout_height="100dp" android:layout_alignParentLeft="true"
               android:layout_centerVertical="true" android:src="@mipmap/ic_launcher"/>

    <TextView android:id="@+id/title_tv" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_toRightOf="@id/imageview"/>
    <TextView android:id="@+id/time_tv" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_below="@id/title_tv"
              android:layout_toRightOf="@id/imageview"/>
</RelativeLayout>